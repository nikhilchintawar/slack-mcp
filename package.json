{
  "name": "slack-mcp",
  "version": "1.0.0",
  "description": "MCP server for searching Slack channels and messages",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "slack-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js"
