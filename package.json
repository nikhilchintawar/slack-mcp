    "search",
    "channels",
    "model-context-protocol",
    "claude",
    "anthropic"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikhilchintawar/slack-mcp.git"
  },
  "homepage": "https://github.com/nikhilchintawar/slack-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@slack/web-api": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
